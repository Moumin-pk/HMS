@{
    ViewData["Title"] = "Hospital Management System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

.hero {
            background-image: linear-gradient( rgba(0, 0, 0, 0.5), 
            rgba(0, 0, 0, 0.5) 
            ), url('https://images.unsplash.com/photo-1527613426441-4da17471b66d?q=80&w=2052&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
            background-size: cover;
            background-position: center;
            color: white;
            text-align: center;
            padding: 100px 20px;
            max-height: 100vh;
            min-height: 400px;
        } 


            .hero h1 {
                font-size: 4rem;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .hero p {
                font-size: 1.5rem;
                margin-top: 10px;
                margin-bottom: 30px;
            }


     

        
    </style>
    </head>
    <!-- Hero Section -->
    <!-- Hero Section -->
    <header class="hero">
        <div class="container d-flex align-content-center justify-content-center flex-column  ">
            <h1>Welcome to HMS</h1>
            <p>Your comprehensive solution for hospital management System.</p>
            <h3 class="px-4 py-2 bg-gradient rounded rounded-2 ">Design By : MOUMIN AHMAD</h3>
        <h4>@ViewBag.totalpatient total Patients</h4>
    </header>

    
    <div class="row mt-5">
        <!-- Total Visits -->
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-house-door-fill" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Total Home Visits</h5>
                    <p class="card-text">@ViewBag.VisitCount</p>
                </div>
            </div>
        </div>

        <!-- Total Patients -->
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-person-fill" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Total Patients</h5>
                    <p class="card-text">@ViewBag.PatientCount</p>
                </div>
            </div>
        </div>

        <!-- Total Doctors -->
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-person-lines-fill" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Total Doctors</h5>
                    <p class="card-text">@ViewBag.DoctorCount</p>
                </div>
            </div>
        </div>

        <!-- Total Members -->
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-people-fill" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Total Members</h5>
                    <p class="card-text">@ViewBag.MemberCount</p>
                </div>
            </div>
        </div>
    </div>
    
