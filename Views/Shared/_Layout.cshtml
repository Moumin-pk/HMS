<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HMS</title>
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HMS.styles.css" asp-append-version="true" /> 
    <link rel="icon"  href="~/favicon.ico" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="header-logo" src="~/img/logo.png" alt="Alternate Text" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="left-side">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark px-4 py-2 @(ViewContext.RouteData.Values["controller"].ToString() == "Home" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark px-4 py-2 @(ViewContext.RouteData.Values["controller"].ToString() == "Home" && ViewContext.RouteData.Values["action"].ToString() == "Contact" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                            </li>
                        </ul>
                    </div>

                    <div class="right-side">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link  text-dark px-4 py-2 @(ViewContext.RouteData.Values["controller"].ToString() == "Patient" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                                   asp-area="" asp-controller="Patient" asp-action="Index">Patient</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark px-4 py-2 @(ViewContext.RouteData.Values["controller"].ToString() == "Doctore" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                                   asp-area="" asp-controller="Doctore" asp-action="Index">Doctor</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark px-4 py-2 @(ViewContext.RouteData.Values["controller"].ToString() == "Appointment" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                                   asp-area="" asp-controller="Appointment" asp-action="Index">Appointment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark px-4 py-2 @(ViewContext.RouteData.Values["controller"].ToString() == "Billing" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                                   asp-area="" asp-controller="Billing" asp-action="Index">Billing</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark px-4 py-2 @(ViewContext.RouteData.Values["controller"].ToString() == "Department" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                                   asp-area="" asp-controller="Department" asp-action="Index">Department</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

     @* <footer class="border-top footer text-muted ">
        <div class="container">
            Develop by Moumin &copy; 2024 - HMS -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a> 
            <a asp-area="" asp-controller="Home" asp-action="Aboutme">About Me</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
