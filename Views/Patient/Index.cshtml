@model IEnumerable<HMS.Models.Patient>

@{
    ViewData["Title"] = "Patient List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-5">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-4">@ViewData["Title"]</h1>
        </div>

        
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>

    <div class="d-flex align-items-center justify-content-between mx-4">
         @* Search *@
        <form asp-controller="Patient" asp-action="Index" method="get" class="mb-3">
            <div class="input-group">
                <input type="search" name="searchTerm" value="@ViewData["SearchTerm"]" class="form-control" placeholder="Search items...">
                <button type="submit" class="btn btn-primary">Search</button>
                <button type="button" id="resetButton" class="btn btn-secondary">Reset</button>
            </div>
        </form>


    @* Pagination *@
    <nav>
        <ul class="pagination justify-content-center" id="paginationControls">
            <!-- Pagination items will be dynamically inserted here -->
        </ul>
    </nav>
    </div>

    <div class="table-responsive">
        <table id="PatientTable" class="table">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.ContactNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Age)</th>
                    <th>@Html.DisplayNameFor(model => model.DoctorId)</th>
                    <th>@Html.DisplayNameFor(model => model.AdmissionDate)</th>
                    <th>@Html.DisplayNameFor(model => model.DiscahrgeDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Gender)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Age)</td>
                        <td>@Html.DisplayFor(modelItem => item.DoctorId)</td>
                        <td>@Html.DisplayFor(modelItem => item.AdmissionDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiscahrgeDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td  class="d-flex align-items-center justify-content-center flex-wrap">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary" aria-label="Edit">
                                <i class="bi bi-pencil"></i>
                            </a> 
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info" aria-label="Details">
                                <i class="bi bi-eye"></i>
                            </a> 
                            <a href="@Url.Action("Delete", new { id = item.Id, name = item.Name, Email = item.Email, ContactNumber = item.ContactNumber, Age = item.Age, DiscahrgeDate = item.DiscahrgeDate })"
                               class="btn btn-danger" aria-label="Delete"
                               onclick="return confirm('Are you sure you want to delete this item?');">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
     
</div>





